<!--header partial for the website. This contains all the header information to be used in the application-->
<header id="top-header">
    <span class="sitename">
        <a href="/" title="Return to Homepage"> CSE Motors</a>
    </span>
    <div class="tools">
 <% if (locals.accountData) { %>
            <!-- Welcome message linked to account management -->
            <a href="/account" title="Account Management">Welcome <%= accountData.firstname %></a>
            <!-- Logout link -->
            <a href="/account/logout" title="Click to logout">Logout</a>
        <% } else { %>
            <!-- Only show this if user is not logged in -->
            <a href="/account/login" title="Click to login">My Account</a>
        <% } %>>
    </div>
</header>